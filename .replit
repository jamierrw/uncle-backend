entrypoint = "main.py"
modules = ["python-3.10:v20-20230824-f46249a"]

hidden = [".pythonlibs"]

[nix]
channel = "stable-23_05"
packages = ["bash", "cargo", "libiconv", "rustc"]

[deployment]
run = ["sh", "-c", "python3 main.py"]
deploymentTarget = "cloudrun"

[workflows]
runButton = "Run Flask App"

[[workflows.workflow]]
name = "Run Flask App"
author = 43734573
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py"

[[ports]]
localPort = 3000
externalPort = 80
